    <section class="w-full h-full flex justify-center items-center px-56 py-24 max-xl:px-12 max-md:px-6">
      <div class="w-full h-full flex flex-col max-w-[1440px] gap-10">
        <div
          class="w-full h-full grid grid-cols-auto-fit gap-y-4 text-white text-2xl bg-gray-400 rounded-2xl bg-clip-padding backdrop-filter backdrop-blur-2xl bg-opacity-10 px-6 py-12 2xl:text-3xl max-xl:px-3 max-xl:py-8"
