          <p class="text-3xl text-white opacity-80 2xl:text-4xl max-md:text-center max-md:text-[28px]">
            Especialistas en Corte/Colorimetria
          </p>
        </header>
        <footer class="w-full flex flex-wrap justify-center items-center gap-6">
          <ButtonHeader
            class="bg-opacity-90 bg-pink-400 hover:bg-opacity-100"
          />
          <ButtonHeader
            class="bg-transparent hover:bg-white hover:border-white hover:bg-opacity-85 hover:text-pink-400"
          />
        </footer>
      </div>
    </section>

    <section
      id="service"
      class="w-full h-full flex justify-center items-center px-56 py-24 max-xl:px-12 max-md:px-6"
    >
      <div class="w-full flex flex-col max-w-[1440px] gap-10">
        <header class="w-full flex justify-star">
          <h2 class="text-pink-200 font-bold text-5xl">Servicios</h2>
        </header>
        <div class="w-full grid grid-cols-auto-fit gap-3">
          <ServiceIcon title="Corte">
            <IconScissor class="w-16 2xl:w-20" />
          </ServiceIcon>
          <ServiceIcon title="Alisado">
            <IconStraigthen class="w-16 2xl:w-20" />
          </ServiceIcon>
          <ServiceIcon title="Tintura">
            <IconTinte class="w-16 2xl:w-20" />
          </ServiceIcon>
          <ServiceIcon title="Rasurado">
            <IconRazer class="w-16 2xl:w-20" />
          </ServiceIcon>
        </div>
      </div>
    </section>

    <section
      id="history"
      class="w-full h-full flex justify-center items-center px-56 py-24 max-xl:px-12 max-md:px-6"
