import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import IconStraigthen from "../components/icons/IconStraighten.astro";
import IconScissor from "../components/icons/IconScissor.astro";
import IconTinte from "../components/icons/IconTinte.astro";
import IconRazer from "../components/icons/IconRazer.astro";
import IconInstagram from "../components/icons/IconInstagram.astro";
import IconFacebook from "../components/icons/IconFacebook.astro";
