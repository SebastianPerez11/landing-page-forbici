import ServiceIcon from "../components/ServiceIcon.astro";
import ButtonHeader from "../components/ButtonHeader.astro";
---

<Layout title="Landing Page">
  <Header />
  <main id="home">
    <section
      class="w-full max-h-screen h-[900px] flex justify-center items-center px-56 max-xl:px-12 max-md:px-6"
    >
      <div
        class="w-full flex flex-col gap-10 items-center justify-center max-w-[1440px]"
      >
        <header class="w-full flex flex-col items-center justify-center gap-6">
          <h1 class="text-pink-300 font-bold text-8xl text-center 2xl:text-9xl max-md:text-[78px]">
            Forbici Stilisti
