---
const {href,title,content} = Astro.props;
---
<a
class="flex text-center justify-center items-center gap-3 bg-gray-400 rounded-full bg-clip-padding backdrop-filter backdrop-blur-2xl bg-opacity-20 px-3 py-2 2xl:py-3 2xl:px-5 transition-all hover:scale-105"
href={href}
target="_blank"
title={title}
><slot name="icon"/>{content}</a
>